<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="springUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>be.jsams.server.model.Address</class>
		<class>be.jsams.server.model.Civility</class>
		<class>be.jsams.server.model.Command</class>
		<class>be.jsams.server.model.CommandDetail</class>
		<class>be.jsams.server.model.Agent</class>
		<class>be.jsams.server.model.ContactInformation</class>
		<class>be.jsams.server.model.Customer</class>
		<class>be.jsams.server.model.Estimate</class>
		<class>be.jsams.server.model.EstimateDetail</class>
		<class>be.jsams.server.model.LegalForm</class>
		<class>be.jsams.server.model.PaymentMode</class>
		<class>be.jsams.server.model.Product</class>
		<class>be.jsams.server.model.ProductCategory</class>
		<class>be.jsams.server.model.Society</class>
		<exclude-unlisted-classes />
		<properties>
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>

</persistence>