<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="springUnit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>be.jsams.server.model.Address</class>
		<class>be.jsams.server.model.ContactInformation</class>
		<class>be.jsams.server.model.Civility</class>
		<class>be.jsams.server.model.LegalForm</class>
		<class>be.jsams.server.model.PaymentMode</class>
		<class>be.jsams.server.model.Society</class>
		<class>be.jsams.server.model.management.Agent</class>
		<class>be.jsams.server.model.management.Customer</class>
		<class>be.jsams.server.model.management.Product</class>
		<class>be.jsams.server.model.management.ProductCategory</class>
		<class>be.jsams.server.model.sale.Bill</class>
		<class>be.jsams.server.model.sale.BillDetail</class>
		<class>be.jsams.server.model.sale.Command</class>
		<class>be.jsams.server.model.sale.CommandDetail</class>
		<class>be.jsams.server.model.sale.CreditNote</class>
		<class>be.jsams.server.model.sale.CreditNoteDetail</class>
		<class>be.jsams.server.model.sale.DeliveryOrder</class>
		<class>be.jsams.server.model.sale.DeliveryOrderDetail</class>
		<class>be.jsams.server.model.sale.Estimate</class>
		<class>be.jsams.server.model.sale.EstimateDetail</class>
		<exclude-unlisted-classes />
		<properties>
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>

</persistence>